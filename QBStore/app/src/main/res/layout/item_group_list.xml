<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y152"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x24"
    android:paddingRight="@dimen/x24">


    <RelativeLayout
        android:id="@+id/rl_left_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:text="22"
            android:textColor="@color/rgb_dd3217"
            android:textSize="22sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:text="他的代理"
            android:textColor="@color/rgb_666666"
            android:textSize="12sp" />
    </RelativeLayout>


    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y88"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_toRightOf="@+id/rl_left_content"
        android:background="@color/rgb_f6f6f6" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_item_type"
        android:layout_toRightOf="@+id/view_line">


        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="测试"
            android:textColor="@color/rgb_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:text="2015-1-12 9:21:26"
            android:textColor="@color/rgb_999999"
            android:textSize="12sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_item_leve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="vip"
        android:textColor="@color/rgb_666666"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/rgb_e2e2e2"/>
</RelativeLayout>
