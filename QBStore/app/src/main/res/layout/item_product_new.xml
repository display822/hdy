<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x26"
        android:paddingRight="@dimen/x26">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_ico"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x240"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginTop="@dimen/y30"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"
            android:src="@mipmap/default_bg"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x240"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item_ico"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:includeFontPadding="false"
                android:text="戴尔笔记本电脑inpiron r15"
                android:textColor="#5e5e5e"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y10"
                >
                <TextView
                    android:id="@+id/tv_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y38"
                    android:background="@drawable/shape_order_status"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="卖出交易"
                    android:textColor="#f75e18"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/tv_item_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y38"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/x16"
                    android:background="@drawable/shape_order_type"
                    android:text="冻结中"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y14"
                android:includeFontPadding="false"
                android:text="电话: "
                android:textColor="#8c8c8c"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/rl_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y14">
                <TextView
                    android:id="@+id/tv_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#8c8c8c"
                    android:text="时间: "
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_item_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y36"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始价格:"
                    android:textColor="#8c8c8c"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2000"
                    android:textColor="#8c8c8c"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#ff4907"
                    android:textStyle="bold"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="3080"
                    android:textStyle="bold"
                    android:textColor="#ff4907"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".00"
                    android:textColor="#ff4907"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@color/rgb_f6f6f6" />
</LinearLayout>
