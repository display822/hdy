<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rgb_f6f6f6"
    android:orientation="vertical">


    <include layout="@layout/include_toobar_top_view" />

    <include layout="@layout/layout_toobar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/rgb_e2e2e2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y92"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="旧密码"
                    android:textColor="@color/rgb_333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_old_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x90"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="18"
                    android:inputType="textPassword"
                    android:hint="@string/change_psw_activity_old_psw_hint"
                    android:textColor="@color/rgb_333333"
                    android:textColorHint="@color/rgb_999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/rgb_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y92"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新密码"
                    android:textColor="@color/rgb_333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_new_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x90"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="18"
                    android:inputType="textPassword"
                    android:hint="@string/change_psw_activity_new_psw_hint"
                    android:textColor="@color/rgb_333333"
                    android:textColorHint="@color/rgb_999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/rgb_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y92"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新密码"
                    android:textColor="@color/rgb_333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x90"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:gravity="center_vertical"
                    android:hint="@string/change_psw_activity_psw_hint"
                    android:textColor="@color/rgb_333333"
                    android:textColorHint="@color/rgb_999999"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginTop="@dimen/y150"
            android:background="@drawable/background_btn"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
